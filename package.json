{
  "name": "trip-planner",
  "version": "1.0.0",
  "description": "A full-stack trip planning application",
  "main": "server/server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm run dev",
